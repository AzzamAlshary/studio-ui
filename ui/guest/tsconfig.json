{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build_tsc",
    "module": "esnext",
    "target": "esnext",
    "importHelpers": true,
    "composite": true,
    "paths": {
      "@craftercms/studio-ui": ["../../app/src"],
      "@craftercms/studio-ui/*": ["../../app/src/*"]
    }
  },
  "references": [
    {
      "path": "../app/tsconfig.build.json"
    }
  ],
  "include": ["./src"],
  "exclude": [
    "./src/tests",
    "./src/hooks.bak.ts",
    "node_modules"
  ]
}
