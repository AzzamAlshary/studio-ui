{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strictNullChecks": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "paths": {
      "@craftercms/studio-ui": ["./ui/app/src"],
      "@craftercms/studio-ui/*": ["./ui/app/src/*"],
      "@craftercms/studio-guest": ["./ui/guest/src"],
      "@craftercms/studio-guest/*": ["./ui/guest/src/*"]
    }
  },
  "exclude": [
    "**/dist",
    "**/build",
    "**/build_tsc"
  ]
}
